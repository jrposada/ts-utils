{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,

    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,

    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "resolveJsonModule": true,

    "allowJs": false,
    "noImplicitAny": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
